<!-- Views/Home/ResetPassword.cshtml -->
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Reset Password</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Your existing styles */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .custom-login-container {
            background: url('/image/adorable-golden-retriever-outdoors.jpg') no-repeat center center;
            background-size: cover;
            height: calc(100vh - 80px);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .custom-login-card {
            background: rgba(255, 255, 255, 0.9);
            padding: 40px 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
            text-align: center;
        }

        .custom-form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .custom-form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 600;
                font-size: 18px;
            }

            .custom-form-group input {
                width: 95%;
                padding: 12px 15px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
            }

        .custom-login-btn {
            width: 100%;
            padding: 12px;
            background-color: #7f5af0;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 18px;
            cursor: pointer;
        }

            .custom-login-btn:hover {
                background-color: #5b45c0;
            }
    </style>
</head>
<body>
    <div class="custom-login-container">
        <div class="custom-login-card">
            <h2>Reset Password</h2>

            @if (ViewBag.Success != null)
            {
                <div style="color: green; margin-bottom: 15px;">@ViewBag.Success</div>
            }
            @if (ViewBag.Error != null)
            {
                <div style="color: red; margin-bottom: 15px;">@ViewBag.Error</div>
            }

            <form method="post" asp-action="ResetPassword" asp-controller="Home">
                @Html.AntiForgeryToken()
                <input type="hidden" name="email" value="@ViewBag.Email" />
                <div class="custom-form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" required />
                </div>
                <div class="custom-form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required />
                </div>
                <button type="submit" class="custom-login-btn">Reset Password</button>
            </form>
        </div>
    </div>
</body>
</html>