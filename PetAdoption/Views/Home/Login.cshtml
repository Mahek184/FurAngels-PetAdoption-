@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Fur Angels Login</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #fff;
            padding: 15px 20px;
            position: relative;
        }
        .header img {
            max-width: 300px;
            height: 50px;
        }
        .icon-container {
            display: flex;
            align-items: center;
            cursor: pointer;
            margin-left: auto;
        }
        .icon-container i {
            font-size: 24px;
            color: #333;
        }
        .dropdown-menu {
            display: none;
            position: absolute;
            top: 80px;
            right: 40px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);
            width: 200px;
            z-index: 1000;
        }
        .dropdown-menu a {
            display: block;
            padding: 10px 15px;
            text-decoration: none;
            color: #333;
            font-size: 16px;
            transition: background-color 0.3s;
        }
        .dropdown-menu a:hover {
            background-color: #f0f0f0;
        }
        .custom-login-container {
            background: url('/image/adorable-golden-retriever-outdoors.jpg') no-repeat center center;
            background-size: cover;
            height: calc(100vh - 80px);
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .custom-login-card {
            background: rgba(255, 255, 255, 0.9);
            padding: 40px 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
            text-align: center;
        }
        .custom-login-card h2 {
            margin-bottom: 30px;
            font-size: 32px;
            font-weight: bold;
        }
        .custom-form-group {
            margin-bottom: 20px;
            text-align: left;
        }
        .custom-form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            font-size: 18px;
        }
        .custom-form-group input {
            width: 95%;
            padding: 12px 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }
        .custom-login-btn {
            width: 100%;
            padding: 12px;
            background-color: #7f5af0;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s;
        }
        .custom-login-btn:hover {
            background-color: #5b45c0;
        }
        .custom-signup-text {
            margin-top: 20px;
            font-size: 16px;
        }
        .custom-signup-text a {
            font-weight: bold;
            color: #000;
            text-decoration: underline;
        }
        .custom-signup-text a:hover {
            color: #7f5af0;
        }
        /* Fixed media query syntax */
        media only screen and (max-width: 600px) {
            .custom-login-card {
                padding: 30px 20px;
            }
            .custom-login-card h2 {
                font-size: 28px;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <img src="~/image/resize.png" alt="Fur Angels Animal Shelter Logo">
        <div class="icon-container" id="menu-icon">
            <i class="fa-solid fa-bars"></i>
        </div>
        <div class="dropdown-menu" id="dropdown-menu">
            <a asp-controller="Home" asp-action="Signup">Sign Up</a>
        </div>
    </div>

    <div class="custom-login-container">
        <div class="custom-login-card">
            <h2>Login</h2>
            
            @if (ViewBag.Success != null)
            {
                <div style="color: green; margin-bottom: 15px;">@ViewBag.Success</div>
            }
            
            @if (ViewBag.Error != null)
            {
                <div style="color: red; margin-bottom: 15px;">@ViewBag.Error</div>
            }

            <form method="post" asp-action="Login" asp-controller="Home">
                @Html.AntiForgeryToken()
                <div class="custom-form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required />
                </div>
                <div class="custom-form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required />
                </div>
                <button type="submit" class="custom-login-btn">LOGIN</button>
            </form>

            <p class="custom-signup-text">
                Don't have an account? <a asp-controller="Home" asp-action="Signup">Sign Up</a>
            </p>
        </div>
    </div>

    <script>
        const menuIcon = document.getElementById("menu-icon");
        const dropdownMenu = document.getElementById("dropdown-menu");

        menuIcon.addEventListener("click", function () {
            dropdownMenu.style.display = dropdownMenu.style.display === "block" ? "none" : "block";
        });

        document.addEventListener("click", function (event) {
            if (!menuIcon.contains(event.target) && !dropdownMenu.contains(event.target)) {
                dropdownMenu.style.display = "none";
            }
        });
    </script>
</body>
</html>