    <script>
        // JavaScript to toggle dropdown menu
        const menuIcon = document.getElementById("menu-icon");
        const dropdownMenu = document.getElementById("dropdown-menu");

        menuIcon.addEventListener("click", function () {
            // Get the position of the menu icon
            let rect = menuIcon.getBoundingClientRect();
            dropdownMenu.style.top = rect.bottom + 15 + "px"; // Moves menu 20px further down
            dropdownMenu.style.left = rect.left + rect.width / 2 - 70 + "px"; // Center align
            dropdownMenu.style.transform = "translateX(-50%)"; // Adjust alignment

            // Toggle dropdown visibility
            if (dropdownMenu.style.display === "block") {
                dropdownMenu.style.display = "none";
            } else {
                dropdownMenu.style.display = "block";
            }
        });

        // Close dropdown if clicked outside
        document.addEventListener("click", function (event) {
            if (!menuIcon.contains(event.target) && !dropdownMenu.contains(event.target)) {
                dropdownMenu.style.display = "none";
            }
        });
    </script>

    <script>
        function updateLastButton(serviceName) {
            var lastButton = document.getElementById("orange-btn");
            lastButton.innerText = "Book " + serviceName;
            lastButton.setAttribute("data-service", serviceName);
        }

        function redirectToService() {
            var selectedService = document.getElementById("orange-btn").getAttribute("data-service");
            if (selectedService) {
                window.location.href = selectedService.toLowerCase() + ".aspx";  // Redirect to the respective service page
            }
        }
