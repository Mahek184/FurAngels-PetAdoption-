@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Forgot Password</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #fff;
            padding: 15px 20px;
            position: relative;
        }

            .header img {
                max-width: 300px;
                height: 50px;
            }

        .icon-container {
            display: flex;
            align-items: center;
            cursor: pointer;
            margin-left: 900px;
        }

            .icon-container i {
                font-size: 24px;
                color: #333;
                transition: color 0.3s;
            }

                .icon-container i:hover {
                    color: #D86F1D; /* Hover color */
                }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 80px;
            right: 40px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);
            width: 200px;
            z-index: 1000;
        }

            .dropdown-menu a {
                display: block;
                padding: 10px 15px;
                text-decoration: none;
                color: #333;
                font-size: 16px;
                transition: background-color 0.3s;
            }

                .dropdown-menu a:hover {
                    background-color: #f0f0f0;
                }

        .custom-login-container {
            background: url('/image/adorable-golden-retriever-outdoors.jpg') no-repeat center center;
            background-size: cover;
            height: calc(100vh - 80px);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Form Card Styling */
        .custom-login-card {
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            padding: 40px;
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

            .custom-login-card h2 {
                font-size: 28px;
                color: #333;
                margin-bottom: 20px;
            }

        .custom-form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .custom-form-group label {
                display: block;
                font-size: 16px;
                color: #555;
                margin-bottom: 8px;
            }

            .custom-form-group input {
                width: 98%;
                padding: 12px;
                border: 1px solid #ccc;
                border-radius: 8px;
                font-size: 14px;
                transition: border 0.3s;
            }

                .custom-form-group input:focus {
                    border: 1px solid #7f5af0;
                    outline: none;
                }

        .custom-login-btn {
            background-color: #7f5af0;
            color: #fff;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            padding: 12px 25px;
            cursor: pointer;
            transition: background 0.3s;
            width: 100%;
        }

            .custom-login-btn:hover {
                background-color: #7f5af0;
            }

        .message {
            margin: 15px 0;
            font-size: 14px;
        }

        .success {
            color: green;
        }

        .error {
            color: red;
        }
    </style>
</head>
<body>

    <div class="header">
        <img src="~/image/resize.png" alt="Fur Angels Animal Shelter Logo">

        <!-- Dropdown Menu -->
        <div class="icon-container" id="menu-icon">
            <i class="fa-solid fa-bars"></i>
        </div>

        <div class="dropdown-menu" id="dropdown-menu">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </div>

    <div class="custom-login-container">
        <div class="custom-login-card">
            <h2>Forgot Password</h2>

            @if (ViewBag.Success != null)
            {
                <div class="message success">@ViewBag.Success</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="message error">@ViewBag.Error</div>
            }

            <form method="post" asp-action="ForgotPassword" asp-controller="Home">
                @Html.AntiForgeryToken()

                <div class="custom-form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="Enter your email" />
                </div>

                <button type="submit" class="custom-login-btn">Send OTP</button>
            </form>
        </div>
    </div>

</body>
</html>
