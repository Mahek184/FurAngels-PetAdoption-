    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const slides = document.querySelector('.review-slider');
            const totalSlides = document.querySelectorAll('.review-box').length;
            const slideWidth = 420; // Adjust this based on your card width + margin
            let index = 0;

            const prevBtn = document.querySelector(".prev");
            const nextBtn = document.querySelector(".next");

            function moveSlide(step) {
                index += step;

                // Loop back when reaching the end or beginning
                if (index >= totalSlides) index = 0;
                if (index < 0) index = totalSlides - 1;

                slides.style.transform = `translateX(${-index * slideWidth}px)`;

                // Ensure both buttons are always visible
                prevBtn.style.display = "block";
                nextBtn.style.display = "block";
            }

            prevBtn.addEventListener("click", function (event) {
                event.preventDefault();
                moveSlide(-1);
            });

            nextBtn.addEventListener("click", function (event) {
                event.preventDefault();
                moveSlide(1);
            });

            // Ensure previous button is always visible
            prevBtn.style.display = "block";
        });
    </script>
