        function filterPackages() {
            const city = document.getElementById("cityInput").value;
            const packageContainer = document.getElementById("packageCards");

            packageContainer.innerHTML = ""; // Clear previous package cards

            packages.forEach(pkg => {
                const price = pkg.discountedPrice[city] || pkg.discountedPrice.default;

                const packageHTML = `
                    <div class="package-card">
                        <h2>${pkg.name}</h2>
                        <p class="price">
                            <span class="original-price">${pkg.originalPrice}</span>
                            <span class="discounted-price">${price}</span>
                        </p>
                        <ul>
                            ${pkg.services.map(service => `<li>${service}</li>`).join("")}
                        </ul>
                        <a href="#" class="button">Book A Groomer</a>
                    </div>
                `;

                packageContainer.innerHTML += packageHTML; // Append the package HTML
            });
        }

        // Automatically set the default city to Bhavnagar when the page loads
        window.onload = function () {
            document.getElementById("cityInput").value = "Bhavnagar";  // Set default city to Bhavnagar
            filterPackages();  // Trigger package filtering for Bhavnagar
        };
