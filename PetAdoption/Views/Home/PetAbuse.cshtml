        <form method="post">
            <label>The issue I'm reporting involves:</label>
            <input type="text" name="Issue" required />

            <label>Your Name*(required)</label>
            <input type="text" name="Name" required />

            <label>Address of incident/animal</label>
            <input type="text" name="Address" />

            <label>City of incident/animal abuse*(required)</label>
            <input type="text" name="City" required />

            <label>State of incident/animal abuse*(required)</label>
            <input type="text" name="State" required />

            <label>Zip code of incident/animal abuse (optional)</label>
            <input type="text" name="ZipCode" />

            <label>
                Please describe your concern in details, including the names and contact information of the individuals and agencies involved, dates and times, the exact location of the incident, and what has been done thus far:*(required)
            </label>
            <textarea name="Details" rows="5" required></textarea>

            <label>Email*(required)</label>
            <input type="email" name="Email" required />

            <label>Contact Number*(required)</label>
            <input type="tel" name="Contact" required />

            <label>Date of Incident*(required)</label>
            <input type="date" name="IncidentDate" required />

            <button type="submit">Report Animal Abuse</button>
        </form>

