<body>

    <form id="form1" runat="server">
        <!-- Header -->
        <div class="header">
            <img src="image/resize.png" alt="Fur Angels Animal Shelter Logo">

            <!-- Dropdown Menu -->
            <div class="icon-container" id="menu-icon">
                <i class="fa-solid fa-bars"></i>
            </div>

            <div class="dropdown-menu" id="dropdown-menu">
                <a asp-controller="Home" asp-action="Login">Login</a>
                <a asp-controller="Home" asp-action="">About us</a>
                <a asp-controller="Home" asp-action="">Pet Grooming</a>
                <a asp-controller="Home" asp-action="">Online Shop</a>
                <a asp-controller="Home" asp-action="">Vet Consult</a>
                <a asp-controller="Home" asp-action="">Report Animal Abuse</a>
                <a asp-controller="Home" asp-action="">Dog Training</a>

            </div>

            <!-- Admin Icon + Login Button -->
            <div class="login-container">
                <!-- Admin Icon (Left Side) -->
                <a asp-controller="Admin" asp-action="Adminlogin" title="Admin Login">
                    <i class="fas fa-user-tie admin-icon"></i>
                </a>

                <!-- User Login Button -->
                <a asp-controller="Home" asp-action="Login">
                    <button class="login-button" >Login</button>
                </a>
            </div>
        </div>


        <!-- Banner -->
        <div class="banner">
            <img src="image/adorable-golden-retriever-outdoors.jpg" alt="Fur Angels Animal Shelter Logo">
            <div class="content">
                <h2>Re-Home and Adopt a Pet in India</h2>
                <p>Every Pet Deserves a Good Home. #Adoptlove</p>
                <a href="LoginPage.aspx" class="button">Adopt a Pet</a>
            </div>
        </div>

        <!-- Adopt Section -->
        <div class="adopt-section">
            <h2>Your Pet Adoption Journey With FurAngels</h2>

            <!-- Left Side: Dog Image -->
            <div class="left-img">
                <img src="image/adopt_me_1-removebg.png" alt="Adopt Me Dog">
            </div>

            <!-- Right Side: Content -->
            <div class="right-content">
                <div class="adopt-item">
                    <img src="image/footprint.png" alt="Paw Print">
                    <div class="adopt-item-content">
                        <h3>Search Pet</h3>
                        <p>Adopt a dog or cat who's right for you.<br>Simply enter your city above to start your search.</p>
                    </div>
                </div>

                <div class="adopt-item">
                    <img src="image/footprint.png" alt="Paw Print">
                    <div class="adopt-item-content">
                        <h3>Connect</h3>
                        <p>Once you find a pet, click "show number"<br>to get contact info for their pet parent<br>or rescue. Contact them to learn more.</p>
                    </div>
                </div>

                <div class="adopt-item">
                    <img src="image/footprint.png" alt="Paw Print">
                    <div class="adopt-item-content">
                        <h3>AdoptLove</h3>
                        <p>The rescue or pet parents will walk<br>you through their adoption process.<br>Prepare your home for the arrival of<br>your new furry family member.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- How it Works Section -->
        <div class="how-it-works">
            <h2>How it works?</h2>
            <div class="steps">
                <div class="step">
                    <img src="image/search-removebg-preview (1).png" alt="Search Icon">
                    <h3>Search</h3>
                    <p>Simply enter your city to start your search.</p>
                </div>
                <div class="step">
                    <img src="image/msg-removebg-preview.png" alt="Meet Icon">
                    <h3>Meet</h3>
                    <p>Schedule your appointment to meet the pet you love.</p>
                </div>
                <div class="step">
                    <img src="image/shopping-cart-removebg-preview.png" alt="Adopt Icon">
                    <h3>Adopt</h3>
                    <p>Finally adopt the dog or cat you love.</p>
