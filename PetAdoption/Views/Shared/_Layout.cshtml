        }

        /* pet care section */

        .container {
            text-align: center;
            background-color: #9C89F5;
            padding: 50px;
            border-radius: 0px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            margin-bottom: 40px;
            font-size: 2rem;
            color: #fff;
        }

        .button-container {
            display: grid;
            grid-template-columns: repeat(2, minmax(150px, 1fr)); /* Two columns layout */
            grid-gap: 20px; /* Space between buttons */
            justify-content: center; /* Horizontally center the grid */
            justify-items: center; /* Center items within their grid cells */
        }

        .button {
            width: 220px; /* Set the desired width */
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 10px; /* Adjust padding if needed */
            background-color: #ffffff;
            color: #000;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .button img {
                width: 30px;
                height: 30px;
                margin-right: 10px; /* Space between the image and text */
            }



            .button:active {
                transform: translateY(2px);
            }

        .button-container > a:nth-child(5) {
            grid-column: span 2; /* Fifth button spans two columns */
